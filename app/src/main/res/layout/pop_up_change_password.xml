<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_round_black">

        <TextView
            android:id="@+id/TvClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#11F1F1F1"
            android:drawableEnd="@drawable/ic_close"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Change Password"
            android:textColor="@color/color_text_title"
            android:textSize="@dimen/dimen_text_title"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvClose"
            android:columnCount="1"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Set a new Password"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/dimen_text_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="4dp"
                android:text="Password should have minimum 6 characters"
                android:textColor="@color/colorNavItem"
                android:textSize="@dimen/dimen_text_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Current Password"
                    android:textColor="@color/color_text_title"
                    android:textSize="@dimen/dimen_text_desc" />

                <EditText
                    android:id="@+id/edit_text_current_password"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/bg_edit_text_white"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_text_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="New Password"
                    android:textColor="@color/color_text_title"
                    android:textSize="@dimen/dimen_text_desc" />

                <EditText
                    android:id="@+id/edit_text_new_password"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/bg_edit_text_white"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_text_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Confirm Password"
                    android:textColor="@color/color_text_title"
                    android:textSize="@dimen/dimen_text_desc" />

                <EditText
                    android:id="@+id/edit_text_confirm_password"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/bg_edit_text_white"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_text_title" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_view_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:background="@drawable/bg_edit_text_white"
                android:paddingStart="20dp"
                android:paddingTop="6dp"
                android:paddingEnd="20dp"
                android:paddingBottom="6dp"
                android:text="Save"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dimen_text_title" />

        </GridLayout>

    </RelativeLayout>

</RelativeLayout>